{
    "compilerOptions": {
        "outDir": "./build",
        "target": "esnext",
        "module": "commonjs",
        "allowJs": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
     ],
    "exclude": [
        "build",
        "node_modules"
    ]
}
